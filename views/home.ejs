  <!-- Category Icons Section -->
  <div class="container">
    <div class="category-icons">
        <% category.forEach(ct => { %>
            <a href="/categories/<%= ct.id %>">
              <img src="<%= ct.imageurl %>" alt="Pasar Uang">
              <div style="color: white;"><%= ct.name %></div>
            </a>    
