    .category-icons {
      display: flex;
      justify-content: space-around;
      align-items: center;
      padding: 20px 0;
    }

    .category-icons a {
      text-decoration: none;
      color: black;
      text-align: center;
    }

    .category-icons img {
      width: 50px;
      height: 50px;
    }

    .investment-product {
      display: flex;
      align-items: center;
      padding: 20px;
      border: 1px solid #ced4da;
      border-radius: 10px;
      margin-top: 20px;
    }

    .investment-product img {
      width: 50px;
      height: 50px;
      margin-right: 15px;
    }

    .progress {
      width: 100%;
      height: 10px;
    }

    .product-info {
      flex-grow: 1;
    }

    .buy-button {
      margin-left: 15px;
    }
