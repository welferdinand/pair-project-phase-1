<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Bobot - Stock Trading for Everyone!</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  <style>
    .outer-container {
      width: 700px; /* Wider width for the register form */
      background-color: #ffffff;
      border: 1px solid #ced4da;
      border-radius: 15px;  /* Adjust this value for more or less rounding */
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    .square {
      width: 100%;
      height: auto;
      background-color: #f8f9fa;
      border: 1px solid #ced4da;
      border-radius: 10px;  /* Adjust this value for more or less rounding */
    }

    .logo-button {
      position: absolute;
      top: 10px;
      left: 10px;
    }

    .top-right-button {
      position: fixed;
      top: 10px;
      right: 10px;
    }

    .bottom-left-button {
      position: fixed;
      bottom: 10px;
      left: 10px;
    }

    .bottom-right-button {
      position: fixed;
      bottom: 10px;
      right: 10px;
    }

    .bottom-middle-button {
      position: fixed;
      bottom: 20px;
      left: 50%;
      transform: translateX(-50%);
    }

    .page-wrapper {
      position: relative;
      min-height: 100vh;
    }
  </style>
</head>
<body style="background-color: #070F2B;">
  <div class="page-wrapper">
    <!-- Logo Button at the very top-left -->
    <a href="/categories/<%= id %>" class="logo-button">
      <img src="https://i.ibb.co.com/3mxM1vb/back-return-svgrepo-com.png" alt="Logo" width="40" height="40">
    </a>

    <div class="d-flex justify-content-center align-items-center min-vh-100">
      <div class="outer-container p-4">
        <div class="text-center mb-4">
          <h4>Add an Investment</h4>
          <p>Please fill in the details to add an investment</p>
        </div>
        <% if (error) { %>
          <div class="alert alert-danger" role="alert">
            <%= error.split(",").join(", ") %>
          </div>
        <% } %>
        <div class="square p-4">
          <form method="post" action="/categories/<%= id %>/add">
            <div class="form-row">
              <div class="form-group col-md-6 w-100">
                <label for="investmentName">Nama Investasi</label>
                <input type="text" class="form-control" placeholder="Nama investasi" name="name">
              </div>
              <div class="form-group">
                <label for="investmentName">Nama Perusahaan</label>
                <select class="form-select" name="CompanyId">
                    <option selected disabled>-- Select One --</option>
                    <% company.forEach(el => { %>
                      <option value="<%= el.id %>"><%= el.name %></option>
                    <% }) %>
                  </select>
              </div>
              <div class="form-group">
                <label for="investmentName">Jenis Investasi</label>
                <select class="form-select" name="investmentType">
                    <option selected disabled>-- Select One --</option>
                    <option value="lowrisk">Low Risk</option>
                    <option value="highrisk">High Risk</option>
                  </select>
              </div>
              <div class="form-group col-md-6 w-100">
                <label for="investmentName">Harga</label>
                <input type="number" class="form-control" placeholder="Harga investasi" name="amount">
              </div>
            </div>
            <div class="form-group">
                <label for="description" class="form-label">Description</label>
                <textarea class="form-control" id="description" rows="3" name="description"></textarea>
            </div>
            <div class="form-group mt-2">
                <button type="submit" class="btn btn-primary btn-block w-100">Add Investment!</button>
              </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</body>
</html>
